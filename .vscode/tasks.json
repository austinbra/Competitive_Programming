{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run CP",
            "type": "shell",
            "command": "g++ -g \"${file}\" -o \"${workspaceFolder}\\a.exe\" -std=c++17 -O2 && \"${workspaceFolder}\\a.exe\"",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}